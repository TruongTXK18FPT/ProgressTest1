<!-- res/layout/item_painting.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="0.5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@null">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image Container -->
            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/ivPainting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="?attr/colorSurfaceVariant"
                    android:src="@drawable/ic_image"
                    android:contentDescription="Painting image"
                    tools:src="@drawable/ic_image" />

                <!-- Loading indicator -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="?attr/colorPrimary" />

                <!-- Image placeholder -->
                <ImageView
                    android:id="@+id/ivPlaceholder"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image"
                    android:alpha="0.3"
                    android:visibility="visible" />
            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- Title with badges -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        tools:text="Trúc Chỉ Sen Vàng" />

                    <!-- Badges -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNew"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mới"
                            android:visibility="gone"
                            app:chipBackgroundColor="?attr/colorPrimaryContainer"
                            app:chipStrokeColor="?attr/colorPrimary"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSale"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KM"
                            android:visibility="gone"
                            app:chipBackgroundColor="?attr/colorErrorContainer"
                            app:chipStrokeColor="?attr/colorError"
                            app:chipStrokeWidth="1dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Author -->
                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="4dp"
                    android:drawableTint="?attr/colorOnSurfaceVariant"
                    tools:text="Mộc Linh" />

                <!-- Price -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="?attr/colorPrimaryContainer"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:drawableStart="@drawable/ic_price"
                    android:drawablePadding="4dp"
                    android:drawableTint="?attr/colorPrimary"
                    android:drawableTintMode="src_in"
                    tools:text="3,500,000 VND" />

                <!-- Description (optional) -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Tranh trúc chỉ sen vàng đẹp tuyệt vời" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEdit"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Sửa"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:icon="@drawable/ic_edit"
                        app:iconSize="16dp"
                        app:cornerRadius="18dp"
                        app:strokeColor="?attr/colorPrimary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDelete"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:text="Xóa"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:icon="@drawable/ic_delete"
                        app:iconSize="16dp"
                        app:cornerRadius="18dp"
                        app:strokeColor="?attr/colorError"
                        app:strokeWidth="1dp"
                        app:iconTint="?attr/colorError" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
